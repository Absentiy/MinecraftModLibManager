<Window x:Class="MinecraftModManager.ModTypeSelectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinecraftModManager"
        mc:Ignorable="d"
        Title="Select type" Height="256" Width="128" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Default" Margin="5" IsDefault="True" Click="Button_Click"/>
        <Button Grid.Row="1" Content="Addon"   Margin="5" Click="Button_Click_1"/>
        <Button Grid.Row="2" Content="Library" Margin="5" Click="Button_Click_2"/>
        <Button Grid.Row="3" Content="Cancel" Margin="10" IsCancel="True" Click="Button_Click_3"/>
    </Grid>
</Window>
